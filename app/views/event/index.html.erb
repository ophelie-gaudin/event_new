    <h1 class="text-center">The Events Project</h1>

  <div class="d-flex justify-content-around">
    <h2> >>>>> <%= link_to "Créer un évènement", new_event_path %> <<<<< </h2>
  </div>
    <div class = "d-inline-flex flex-wrap justify-content-around align-self-stretch">

      <%@all_events_array.each do |event| %>
        <div class="card m-3 " style="width: 18rem;">
          <div class="card-body ">
            <h5 class="card-title"> <%= event.title %></h5>
            <% admin_id = event.admin_id%>
            <% author_name = User.find(admin_id).first_name %>
            <h6> de: <%= author_name %> </h6>
            <h6> A: <%= event.location %> </h6>
            <p class="card-text"> <%= event.description %></p> 
            <a href="/event/<%= event.id %>">Voir les détails de cet évènement</a>
          </div>
        </div>
      <% end %>
      
    </div>
