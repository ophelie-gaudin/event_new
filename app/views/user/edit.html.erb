<h2>Actualise tes informations </h2>

<%= form_with(model: @user, url: user_path, method: "put", local: true) do |f| %>
 
  <div class="field">
    <%= f.label :first_name %> <br />
    <%= f.text_field :first_name, autocomplete: "new-password" %>
  </div>

    <div class="field">
    <%= f.label :last_name %> <br />
    <%= f.text_field :last_name, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", cancel_user_registration_path(), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
